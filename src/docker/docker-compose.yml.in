version: "2.4"
services:
    dlms-access-point-meter1:
        build:
            context: src
            target: demo
        entrypoint: 
            - /tmp/Metersim 
            - "M1001"
        expose:
            - "4059/tcp"
        networks:
            - meternet
        volumes:
            - ./src:/tmp:z

    dlms-access-point-meter2:
        build:
            context: src
            target: demo
        entrypoint: 
            - /tmp/Metersim 
            - "M1002"
        expose:
            - "4059/tcp"
        networks:
            - meternet
        volumes:
            - ./src:/tmp:z

    dlms-access-point-hes:
        build:
            context: src
            target: demo
        entrypoint: 
            - /tmp/HESsim
            - "8888"
            - dlms-access-point-meter1
            - dlms-access-point-meter2
        expose:
            - "8888/tcp"
        networks:
            - hesnet
            - meternet
        volumes:
            - ./src:/tmp:z

    dlms-access-point-cis:
        build:
            context: src
            target: demo
        entrypoint: 
            - /tmp/CISsim
            - "http://dlms-access-point-hes:8888"
            - "http://dlms-access-point-cis"
        networks:
            - hesnet
        volumes:
            - ./src:/tmp:z

    dlms-access-point-docs:
        build:
            context: doc/html
            target: docserver
        ports:
                - "8080:80"
        networks:
            - docnet
        volumes:
            - ./doc/html:/usr/share/nginx/html:z

networks:
    docnet:
    hesnet:
    meternet:

    
