version: "2.4"
services:
    meter:
        build:
            context: src
            target: demo
        entrypoint: 
            - /tmp/Metersim 
        expose:
            - "4059/tcp"
        networks:
            - meternet
        sysctls:
          net.ipv6.conf.all.disable_ipv6: 0

    access-point:
        build:
            context: src
            target: demo
        entrypoint: 
            - /bin/bash
        expose:
            - "4059/tcp"
        networks:
            - meternet
            - hesnet
        sysctls:
          net.ipv6.conf.all.disable_ipv6: 0

    hes:
        build:
            context: src
            target: demo
        entrypoint: 
            - /tmp/HESsim
            - dlms-access-point-meter1
            - dlms-access-point-meter2
            - dlms-access-point-meter3
        networks:
            - hesnet
        sysctls:
          net.ipv6.conf.all.disable_ipv6: 0

    docs:
        build:
            context: doc/html
            target: docserver
        ports:
                - "8080:80"
        networks:
            - docnet
        volumes:
            - ./doc/html:/usr/share/nginx/html:z

networks:
    docnet:
    hesnet:
        enable_ipv6: true
        driver: bridge
    meternet:
        enable_ipv6: true
        driver: bridge
        ipam:
            driver: default
            config:
                - subnet: 2001:3200:3200::/64

